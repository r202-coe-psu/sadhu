{% extends '/administration/classes/index.html.j2' %}
{% import '/base/html-renderer.html.j2' as renderer %}

{% block additional_js %}
<script type="text/javascript">
  $('.ui.fluid.dropdown')
    .dropdown({
      allowAdditions: true
    })
  ;
</script>
{% endblock %}

{% block breadcrumbs %}
  {{ super() }}
  <i class="right angle icon divider"></i>
  <div class="active section">TA</div>
{% endblock %}

{% block dashboard_title %}
  TA
{% endblock %}

{% block content %}
<div class="ui conainer">
  <div class="ui segment">
    <form method="POST" class="ui form">
      {{ form.csrf_token }}
      {{ renderer.render_search_multiple_select(form.users) }}
      <button class="ui primary button" type="submit">Add</button>
    </form>
  </div>
</div>
{% endblock %}
